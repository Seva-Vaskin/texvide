#!/bin/bash

xhost +local:docker >> /dev/null

docker run \
    --env="DISPLAY" \
    --volume="${HOME}:/home" \
    --volume=$(dirname $0)/../config/:/root/.config \
    --volume="/tmp/.X11-unix:/tmp/.X11-unix" \
    --volume="$HOME/.Xauthority:/root/.Xauthority:rw" \
    --volume="/run/user/1000/at-spi/bus_0:/run/user/1000/at-spi/bus_0:rw" \
    -it texvide